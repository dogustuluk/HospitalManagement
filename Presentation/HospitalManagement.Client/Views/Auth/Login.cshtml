@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<body>
    <div class="loader-wrapper">
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"> </div>
        <div class="dot"></div>
    </div>
    <div class="container-fluid p-0">
        <div class="row m-0">
            <div class="col-12 p-0">
                <div class="login-card">
                    <div>
                        <div><a class="logo" href="index.html"><img class="img-fluid for-light" src="../assets/images/logo/logo2.png" alt="looginpage"></a></div>
                        <div class="login-main">
                            <form  class="theme-form" asp-controller="Auth" asp-action="Login" method="post">
                                <h4 class="text-center">MedSis</h4>
                                <p class="text-center">Giriş Yap</p>
                                <div class="form-group">
                                    <label class="col-form-label">Email veya Kullanıcı Adı</label>
                                    <input class="form-control"  asp-for="@Model.UsernameOrEmail" required="" placeholder="Test@gmail.com">
                                </div>
                                <div class="form-group">
                                    <label class="col-form-label">Şifre</label>
                                    <div class="form-input position-relative">
                                        <input class="form-control" type="password" asp-for="@Model.Password" required="" placeholder="*********">
                                        <div class="show-hide"><span class="show">                         </span></div>
                                    </div>
                                </div>
                                <div class="form-group mb-0">
                                    <div class="checkbox p-0">
                                        <input id="checkbox1" type="checkbox">
                                        <label class="text-muted" for="checkbox1">Beni Hatırla</label>
                                    </div><a class="link" href="Auth/forgotPassword.html">Şifremi Unuttum?</a>
                                    <div class="text-end mt-3">
                                        <button class="btn btn-primary btn-block w-100" type="submit">Oturum Aç                 </button>
                                    </div>
                                </div>
                                <div class="login-social-title">
                                    <h6>Veya şununla oturum açın:</h6>
                                </div>
                                <div class="form-group">
                                    <ul class="login-social">
                                        <li><a href="https://www.linkedin.com" target="_blank"><i data-feather="linkedin"></i></a></li>
                                        <li><a href="https://twitter.com" target="_blank"><i data-feather="twitter"></i></a></li>
                                        <li><a href="https://www.facebook.com" target="_blank"><i data-feather="facebook"></i></a></li>
                                        <li><a href="https://www.instagram.com" target="_blank"><i data-feather="instagram"></i></a></li>
                                    </ul>
                                </div>
                                <p class="mt-4 mb-0 text-center">Hesabın Yok Mu?<a class="ms-2" href="sign-up.html">Hesap Oluştur</a></p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>